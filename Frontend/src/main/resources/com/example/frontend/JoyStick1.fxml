<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="348.0" prefWidth="331.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.frontend.windowController.JoyStickController">
   <left>
      <Slider fx:id="throttle" disable="true" blockIncrement="0.1" max="1.0" onMouseDragged="#sliderVer" orientation="VERTICAL" BorderPane.alignment="CENTER" />
   </left>
   <bottom>
      <Slider fx:id="rudder" disable="true" blockIncrement="0.1" max="1.0" min="-1.0" onMouseDragged="#sliderHor" BorderPane.alignment="CENTER" />
   </bottom>
   <center>
      <Canvas fx:id="joyStick" height="200.0" onMouseDragged="#mouseMove" onMousePressed="#mouseDown" onMouseReleased="#mouseUp" width="200.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
